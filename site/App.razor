<Router AppAssembly="typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="" />
    </Found>
    <NotFound>
        <PageTitle>Not Found</PageTitle>
        <LayoutView Layout="typeof(MainLayout)">
            <div class="max-w-4xl mx-auto px-6 py-32 text-center">
                <h1 class="text-4xl font-bold mb-4">404</h1>
                <p class="text-gray-400 mb-8">Page not found.</p>
                <a href="/" class="text-amber-400 hover:text-amber-300 transition-colors">Go home</a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
