@code {
    private bool _copied;

    private async Task CopyInstallCommand()
    {
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", "dotnet add package TailwindBlazor");
        _copied = true;
        StateHasChanged();
        await Task.Delay(2000);
        _copied = false;
        StateHasChanged();
    }

    [Inject] private IJSRuntime JS { get; set; } = default!;
}
